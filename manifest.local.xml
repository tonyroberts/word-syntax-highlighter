<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
        xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
        xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
        xsi:type="TaskPaneApp">

    <!-- Begin Basic Settings: Add-in metadata, used for all versions of Office unless override provided. -->

    <!-- IMPORTANT! Id must be unique for your add-in, if you reuse this manifest ensure that you change this id to a new GUID. -->
    <Id>6a8effdb-17d0-4c63-b202-bfa7d9ce6a70</Id>

    <!--Version. Updates from the store only get triggered if there is a version change. -->
    <Version>1.0.0.1</Version>
    <ProviderName>Tony Roberts</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <!-- The display name of your add-in. Used on the store and various places of the Office UI such as the add-ins dialog. -->
    <DisplayName DefaultValue="Easy Syntax Highlighter (Dev)" />
    <Description DefaultValue="Apply syntax highlighting to code blocks in Word"/>

    <!-- Icon for your add-in. Used on installation screens and the add-ins dialog. -->
    <IconUrl DefaultValue="https://localhost:3000/assets/highlight-32.png" />
    <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/highlight-80.png"/>

    <!--If you plan to submit this add-in to the Office Store, uncomment the SupportUrl element below-->
    <SupportUrl DefaultValue="https://localhost:3000/about.html" />

    <!-- Domains that will be allowed when navigating. For example, if you use ShowTaskpane and then have an href link, navigation will only be allowed if the domain is on this list. -->
    <AppDomains>
        <AppDomain>app.pyxll.com</AppDomain>
        <AppDomain>www.pyxll.com</AppDomain>
    </AppDomains>
    <!--End Basic Settings. -->

    <!--Begin TaskPane Mode integration. This section is used if there are no VersionOverrides or if the Office client version does not support add-in commands. -->
    <Hosts>
        <Host Name="Document" />
    </Hosts>
    <DefaultSettings>
        <SourceLocation DefaultValue="https://localhost:3000/index.html" />
    </DefaultSettings>
    <!-- End TaskPane Mode integration.  -->

    <Permissions>ReadWriteDocument</Permissions>

    <!-- Begin Add-in Commands Mode integration. -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

        <!-- The Hosts node is required. -->
        <Hosts>
            <!-- Each host can have a different set of commands. -->
            <!-- Excel host is Workbook, Word host is Document, and PowerPoint host is Presentation. -->
            <!-- Make sure the hosts you override match the hosts declared in the top section of the manifest. -->
            <Host xsi:type="Document">
                <!-- Form factor. Currently only DesktopFormFactor is supported. -->
                <DesktopFormFactor>
                    <!--"This code enables a customizable message to be displayed when the add-in is loaded successfully upon individual install."-->
                    <GetStarted>
                        <!-- Title of the Getting Started callout. resid points to a ShortString resource -->
                        <Title resid="PyXLL.WSH.GetStarted.Title"/>

                        <!-- Description of the Getting Started callout. resid points to a LongString resource -->
                        <Description resid="PyXLL.WSH.GetStarted.Description"/>

                        <!-- Point to a url resource which details how the add-in should be used. -->
                        <LearnMoreUrl resid="PyXLL.WSH.AboutUrl"/>
                    </GetStarted>

                    <!-- Function file is a HTML page that includes the JavaScript where functions for ExecuteAction will be called.
                         Think of the FunctionFile as the code behind ExecuteFunction. -->
                    <FunctionFile resid="PyXLL.WSH.FunctionFile.Url" />


                    <!-- PrimaryCommandSurface is the main Office Ribbon. -->
                    <ExtensionPoint xsi:type="PrimaryCommandSurface">
                        <!-- Use OfficeTab to extend an existing Tab. Use CustomTab to create a new tab. -->
                        <CustomTab id="PyXLL.WSH.CustomTab">
                            <!-- Ensure you provide a unique id for the group. Recommendation for any IDs is to namespace using your company name. -->
                            <Group id="PyXLL.WSH.Group1">
                                <!-- Label for your group. resid must point to a ShortString resource. -->
                                <Label resid="PyXLL.WSH.Group1Label" />
                                <!-- Icons. Required sizes 16,32,80, optional 20, 24, 40, 48, 64. Strongly recommended to provide all sizes for great UX. -->
                                <!-- Use PNG icons. All URLs on the resources section must use HTTPS. -->
                                <Icon>
                                    <bt:Image size="16" resid="PyXLL.WSH.Highlight_16x16" />
                                    <bt:Image size="32" resid="PyXLL.WSH.Highlight_32x32" />
                                    <bt:Image size="80" resid="PyXLL.WSH.Highlight_80x80" />
                                </Icon>

                                <!-- Control. It can be of type "Button" or "Menu". -->
                                <Control xsi:type="Button" id="PyXLL.WSH.HighlightBtn">
                                    <Label resid="PyXLL.WSH.HighlightBtn.Label" />
                                    <Supertip>
                                        <!-- ToolTip title. resid must point to a ShortString resource. -->
                                        <Title resid="PyXLL.WSH.HighlightBtn.Label" />
                                        <!-- ToolTip description. resid must point to a LongString resource. -->
                                        <Description resid="PyXLL.WSH.HighlightBtn.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="PyXLL.WSH.Highlight_16x16" />
                                        <bt:Image size="32" resid="PyXLL.WSH.Highlight_32x32" />
                                        <bt:Image size="80" resid="PyXLL.WSH.Highlight_80x80" />
                                    </Icon>

                                    <!-- This is what happens when the command is triggered (E.g. click on the Ribbon). Supported actions are ExecuteFunction or ShowTaskpane. -->
                                    <Action xsi:type="ExecuteFunction">
                                        <!--Name of the function to call. This function needs to exist in the global DOM namespace of the function file-->
                                        <FunctionName>highlightSelection</FunctionName>
                                    </Action>
                                </Control>

                                <Control xsi:type="Button" id="PyXLL.WSH.TaskpaneButton">
                                    <Label resid="PyXLL.WSH.TaskpaneButton.Label" />
                                    <Supertip>
                                        <!-- ToolTip title. resid must point to a ShortString resource. -->
                                        <Title resid="PyXLL.WSH.TaskpaneButton.Label" />
                                        <!-- ToolTip description. resid must point to a LongString resource. -->
                                        <Description resid="PyXLL.WSH.TaskpaneButton.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="PyXLL.WSH.Config_16x16" />
                                        <bt:Image size="32" resid="PyXLL.WSH.Config_32x32" />
                                        <bt:Image size="80" resid="PyXLL.WSH.Config_80x80" />
                                    </Icon>

                                    <!-- This is what happens when the command is triggered (E.g. click on the Ribbon). Supported actions are ExecuteFunction or ShowTaskpane. -->
                                    <Action xsi:type="ShowTaskpane">
                                        <TaskpaneId>ButtonId2</TaskpaneId>
                                        <!-- Provide a url resource id for the location that will be displayed on the task pane. -->
                                        <SourceLocation resid="PyXLL.WSH.Taskpane.Url" />
                                    </Action>
                                </Control>
                            </Group>
                            <Label resid="PyXLL.WSH.TabLabel" />
                        </CustomTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>

        <!-- You can use resources across hosts and form factors. -->
        <Resources>
            <bt:Images>
                <bt:Image id="PyXLL.WSH.Config_16x16" DefaultValue="https://localhost:3000/assets/settings-16.png" />
                <bt:Image id="PyXLL.WSH.Config_32x32" DefaultValue="https://localhost:3000/assets/settings-32.png" />
                <bt:Image id="PyXLL.WSH.Config_80x80" DefaultValue="https://localhost:3000/assets/settings-80.png" />
                <bt:Image id="PyXLL.WSH.Highlight_16x16" DefaultValue="https://localhost:3000/assets/highlight-16.png" />
                <bt:Image id="PyXLL.WSH.Highlight_32x32" DefaultValue="https://localhost:3000/assets/highlight-32.png" />
                <bt:Image id="PyXLL.WSH.Highlight_80x80" DefaultValue="https://localhost:3000/assets/highlight-80.png" />
            </bt:Images>
            <bt:Urls>
                <bt:Url id="PyXLL.WSH.FunctionFile.Url" DefaultValue="https://localhost:3000/functions.html" />
                <bt:Url id="PyXLL.WSH.Taskpane.Url" DefaultValue="https://localhost:3000/index.html" />
                <bt:Url id="PyXLL.WSH.AboutUrl" DefaultValue="https://localhost:3000/about.html" />
            </bt:Urls>
            <!-- ShortStrings max characters==125. -->
            <bt:ShortStrings>
                <bt:String id="PyXLL.WSH.TabLabel" DefaultValue="Syntax Highlighter" />
                <bt:String id="PyXLL.WSH.HighlightBtn.Label" DefaultValue="Highlight Selection" />
                <bt:String id="PyXLL.WSH.TaskpaneButton.Label" DefaultValue="Syntax Highlighter Settings" />
                <bt:String id="PyXLL.WSH.Group1Label" DefaultValue="Syntax Highlighter" />
                <bt:String id="PyXLL.WSH.GetStarted.Title" DefaultValue="Syntax Highlighter is now available" />
            </bt:ShortStrings>
            <!-- LongStrings max characters==250. -->
            <bt:LongStrings>
                <bt:String id="PyXLL.WSH.HighlightBtn.Tooltip" DefaultValue="Click to apply syntax highlighting to the current selection" />
                <bt:String id="PyXLL.WSH.TaskpaneButton.Tooltip" DefaultValue="Click to show the Syntax Highlighter Settings" />
                <bt:String id="PyXLL.WSH.GetStarted.Description" DefaultValue="The add-in is loaded in the Syntax Highlighter tab. Click the icon to use the add-in." />
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
    <!-- End Add-in Commands Mode integration. -->

</OfficeApp>
